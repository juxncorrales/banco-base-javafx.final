<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="co.edu.uniquindio.banco.controlador.LoginControlador"
      prefHeight="400.0" prefWidth="400.0" alignment="center" spacing="30.0" >

    <Label text="Ingresa a tu cuenta" >
        <font>
            <Font size="18.0" />
        </font>
    </Label>

    <GridPane alignment="CENTER" hgap="10.0" vgap="10.0">

        <Label text="Número de Identificación:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="txtNuIdenti" GridPane.columnIndex="1" GridPane.rowIndex="2" minHeight="30.0" />

        <Label text="Contraseña:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <PasswordField fx:id="txtPasswordLogin" GridPane.columnIndex="1" GridPane.rowIndex="4" minHeight="30.0" />
    </GridPane>

    <Button text="Ingresar" onAction="#login" minHeight="40.0" minWidth="130.0" style="-fx-background-color: #00807a; -fx-text-fill: white" />

</VBox>
